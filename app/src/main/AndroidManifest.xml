<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoApp">
        <activity
            android:name=".AddTask"
            android:exported="true"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login_register.RegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".intro.SplashScreen"
            android:exported="true" >

        </activity>
        <activity
            android:name=".login_register.SuccesfulActivity"
            android:exported="true" />
        <activity
            android:name=".login_register.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".login_register.ForgetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".login_register.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".intro.IntroActivity"
            android:exported="true" />
    </application>

</manifest>