<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register.SuccesfulActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="20sp"
    android:id="@+id/succesfulActivity">

    <ImageView
        android:id="@+id/succesful_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/slide_image_1" />

    <TextView
        android:id="@+id/succes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Succesful!"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/succes_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="230dp"
        android:gravity="center"
        android:text="You have seccesfully change password.\nPlease use yout new password when\nloggin in."
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />


</LinearLayout>